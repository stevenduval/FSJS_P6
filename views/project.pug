extends layout.pug

block content

  - const { project_name, description, github_link, live_link, image_urls, technologies } = project

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project_name}

        p #{description}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in technologies
            li= technology

        a.btn-link(href=`${live_link}` target='_blank') Live Demo
        a.btn-link(href=`${github_link}` target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${image_urls[1]}`, alt=`Screen shot of ${project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
